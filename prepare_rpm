#!/bin/bash
. ../devrc
pushd .
NAME=rms-tools
rpmd=/usr/src/packages
tar -czvf ${rpmd}/SOURCES/${NAME}.tgz sge-server.py sge_server_messages.py sge-server.rc sgestat.py qsub.py proepilogue.py sge_editor_conf.py modify_sge_config.sh LICENSE.GPL README sge sge_maui add_logtail.sh add_meta_complex.py sge_tools.py jobinfo.py sgemaster sgeexecd sgebdb sge_request

prepare_spec
cd $rpmd/SPECS
build_rpm noarch
install_file
