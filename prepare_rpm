#!/bin/bash
. ../devrc
NAME=cluster-config-server
rpmd=/usr/src/packages
cp ${NAME}.spec ${rpmd}/SPECS
tar -czvf ${rpmd}/SOURCES/${NAME}.tgz cluster-config-server.py cluster-config-server cluster_config_server_messages.py cluster-config-server.cf README LICENSE.GPL

prepare_spec
cd $rpmd/SPECS
build_rpm noarch
install_file
